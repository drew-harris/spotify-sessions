generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String
  displayName String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  refreshToken String   @db.Text
  accessToken  String   @db.Text
  expiresAt    DateTime
}
